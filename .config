# Platform
CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt76x8=y
CONFIG_TARGET_ramips_mt76x8_DEVICE_xiaomi_mir4c=y

# Base options
CONFIG_BUILD_PATENTED=y
CONFIG_BUSYBOX_CUSTOM=y
CONFIG_DEVEL=y

# Preserve root with no default passwd
# (empty password by default; set after login with passwd)
CONFIG_PASSWORD_MINLEN=0

# Disable IPv6
CONFIG_IPV6=n

# Wireless support
CONFIG_PACKAGE_mac80211=y
CONFIG_PACKAGE_kmod-mt76x8=y
CONFIG_PACKAGE_kmod-mt76-core=y

# LuCI Chinese web interface
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y

# DDNS support
CONFIG_PACKAGE_ddns-scripts=y
CONFIG_PACKAGE_luci-app-ddns=y

# KMS server
CONFIG_PACKAGE_kms-server=y
CONFIG_PACKAGE_luci-app-kms-server=y
CONFIG_PACKAGE_luci-i18n-kms-server-zh-cn=y

# Passwall2
CONFIG_PACKAGE_luci-app-passwall2=y
CONFIG_PACKAGE_passwall2=y
CONFIG_PACKAGE_luci-i18n-passwall2-zh-cn=y

# NaiveProxy
CONFIG_PACKAGE_luci-app-naiveproxy=y
CONFIG_PACKAGE_naiveproxy=y
CONFIG_PACKAGE_luci-i18n-naiveproxy-zh-cn=y

# Hysteria2
CONFIG_PACKAGE_luci-app-hysteria=y
CONFIG_PACKAGE_hysteria=y
CONFIG_PACKAGE_luci-i18n-hysteria-zh-cn=y

# sysupgrade support
CONFIG_TARGET_IMAGES_GZIP=y
CONFIG_IMAGEOPT=y

# Remove unwanted packages
CONFIG_PACKAGE_openssh-server=n
CONFIG_PACKAGE_ipv6helper=n
CONFIG_PACKAGE_dnsmasq_full_dhcpv6=n
CONFIG_PACKAGE_ppp=n
CONFIG_PACKAGE_pppoe=n
CONFIG_PACKAGE_luci-app-vpn=n
CONFIG_PACKAGE_luci-app-commands=n
